{
  "name": "anam-gallery",
  "version": "0.2.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "NODE_OPTIONS='--max-old-space-size=4096 --no-deprecation' next dev --port 3000",
    "dev:turbo": "NODE_OPTIONS='--max-old-space-size=4096 --no-deprecation' next dev --turbo --port 3000",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest --testPathPattern=__tests__/components",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:api": "jest --testPathPattern=__tests__/api",
    "test:accessibility": "jest --testPathPattern=__tests__/accessibility",
    "test:a11y": "npm run test:accessibility && npm run test:a11y:audit",
    "test:a11y:audit": "pa11y-ci --sitemap https://anam-gallery.vercel.app/sitemap.xml",
    "test:a11y:contrast": "node scripts/test-color-contrast.js",
    "test:a11y:screen-reader": "jest --testPathPattern=__tests__/accessibility/screen-reader",
    "test:a11y:keyboard": "jest --testPathPattern=__tests__/accessibility/keyboard",
    "test:a11y:regression": "jest --testPathPattern=__tests__/accessibility/regression",
    "test:a11y:report": "node scripts/generate-accessibility-report.js",
    "validate:accessibility": "npm run test:a11y && npm run test:a11y:contrast",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:visual": "jest --testPathPattern=__tests__/visual",
    "test:performance": "jest --testPathPattern=__tests__/performance",
    "test:pwa": "jest --testPathPattern=__tests__/pwa",
    "test:all": "npm run test:coverage && npm run test:e2e",
    "optimize-images": "node scripts/optimize-images.js",
    "test:cultural": "tsx scripts/test-cultural-integration.ts",
    "deploy": "npx vercel --prod",
    "deploy:preview": "npx vercel"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.1",
    "@next/bundle-analyzer": "^15.3.3",
    "@radix-ui/react-accordion": "1.2.2",
    "@radix-ui/react-alert-dialog": "1.1.4",
    "@radix-ui/react-aspect-ratio": "1.1.1",
    "@radix-ui/react-avatar": "1.1.2",
    "@radix-ui/react-checkbox": "1.1.3",
    "@radix-ui/react-collapsible": "1.1.2",
    "@radix-ui/react-context-menu": "2.2.4",
    "@radix-ui/react-dialog": "1.1.4",
    "@radix-ui/react-dropdown-menu": "2.1.4",
    "@radix-ui/react-label": "2.1.1",
    "@radix-ui/react-popover": "1.1.4",
    "@radix-ui/react-progress": "1.1.1",
    "@radix-ui/react-scroll-area": "1.2.2",
    "@radix-ui/react-select": "2.1.4",
    "@radix-ui/react-separator": "1.1.1",
    "@radix-ui/react-slot": "1.1.1",
    "@radix-ui/react-toast": "1.2.4",
    "@radix-ui/react-toggle-group": "1.1.1",
    "@radix-ui/react-tooltip": "1.1.6",
    "@sentry/nextjs": "^7.92.0",
    "@types/nodemailer": "^6.4.17",
    "airtable": "^0.12.2",
    "autoprefixer": "^10.4.20",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "3.6.0",
    "dotenv": "^16.5.0",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.514.0",
    "next": "^15.4.5",
    "next-intl": "^4.1.0",
    "next-themes": "^0.4.6",
    "nodemailer": "^7.0.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.54.1",
    "sonner": "^1.7.1",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "web-vitals": "^5.0.2",
    "workbox-webpack-plugin": "^7.3.0",
    "workbox-window": "^7.3.0",
    "zod": "^3.24.1",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@axe-core/playwright": "^4.8.5",
    "@playwright/test": "^1.42.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "axe-core": "^4.8.4",
    "axe-playwright": "^2.0.1",
    "color-contrast-checker": "^2.1.0",
    "eslint": "^9.32.0",
    "eslint-config-next": "^15.3.5",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.5.1",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "jest-image-snapshot": "^6.4.0",
    "msw": "^2.2.2",
    "pa11y": "^8.0.0",
    "pa11y-ci": "^3.1.0",
    "postcss": "^8",
    "puppeteer": "^22.3.0",
    "sharp": "^0.34.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5"
  }
}
